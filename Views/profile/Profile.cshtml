@model ASP.netcore_Project.Models.ProfileModel

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4" style="max-width: 500px; margin: auto; border-radius: 15px;">
        <div class="text-center mb-4">
            <img src="~/images/user-placeholder.png" alt="User" class="rounded-circle" width="80">
            <h3 class="mt-2 fw-bold">My Profile</h3>
            <p class="text-muted">Welcome, @Model.FirstName!</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">First Name</label>
            <input type="text" class="form-control" value="@Model.FirstName" readonly>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Email</label>
            <input type="text" class="form-control" value="@Model.Email" readonly>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Last Name</label>
            <input type="text" class="form-control" value="@Model.LastName" readonly>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Phone</label>
            <input type="text" class="form-control" value="@Model.Phone" readonly>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Address</label>
            <input type="text" class="form-control" value="@Model.Address" readonly>
        </div>

        <div class="text-center">
            <button id="logoutBtn" onclick="logoutWithDelay()" class="btn btn-danger">
                Logout
            </button>
        </div>
    </div>
</div>

<!-- Full-Screen Loading Overlay -->
<div id="loadingOverlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.7); z-index: 9999; display: flex; align-items: center; justify-content: center;">
    <div class="spinner-border text-light" role="status" style="width: 4rem; height: 4rem;"></div>
</div>

<!-- Toast Message for Logout -->


<script>
    function logoutWithDelay() {
        console.log("Logout button clicked!");

        // Show full-screen loader
        var overlay = document.getElementById("loadingOverlay");
        if (overlay) {
            overlay.style.display = "flex";
            console.log("Loading overlay shown.");
        }

        // Show logout toast
        var toastElement = document.getElementById('logoutToast');
        if (toastElement) {
            var toast = new bootstrap.Toast(toastElement);
            toast.show();
        }

        // Wait for 3 seconds before redirecting to logout
        setTimeout(function () {
            console.log("Redirecting to logout...");
            window.location.href = "/Account/Logout"; // Replace with your actual logout URL
        }, 3000);
    }

    // Hide overlay on page load
    document.addEventListener("DOMContentLoaded", function () {
        var overlay = document.getElementById("loadingOverlay");
        if (overlay) {
            overlay.style.display = "none";
        }
    });
</script>

@{
    ViewData["Title"] = "Orders List";
    Layout = "~/Views/Shared/Adminlayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">Orders List</h2>
           
        </div>
        <div class="d-flex gap-3">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Feb 16,2022 - Feb 20,2022" />
                <span class="input-group-text"><i class="fas fa-calendar"></i></span>
            </div>
            <div class="dropdown">
                <button class="btn btn-outline-dark dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    Change Status
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Delivered</a></li>
                    <li><a class="dropdown-item" href="#">Canceled</a></li>
                    <li><a class="dropdown-item" href="#">Pending</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="card-title mb-0">Recent Purchases</h5>
                <button class="btn btn-icon btn-light"><i class="fas fa-ellipsis-v"></i></button>
            </div>
            <div class="table-responsive">
                <table class="table align-middle table-hover">
                    <thead class="table-light">
                        <tr>
                            <th><input type="checkbox" class="form-check-input" /></th>
                            <th>Product</th>
                            <th>Order ID</th>
                            <th>Date</th>
                            <th>Customer Name</th>
                            <th>Status</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><input type="checkbox" class="form-check-input" /></td>
                            <td>T-shirt</td>
                            <td>#25426</td>
                            <td>Nov 8th,2023</td>
                            <td>Kavin</td>
                            <td><span class="badge bg-success-subtle text-success">Delivered</span></td>
                            <td>₹200.00</td>
                        </tr>
                        <tr>
                            <td><input type="checkbox" class="form-check-input" /></td>
                            <td>Paint</td>
                            <td>#25425</td>
                            <td>Nov 7th,2023</td>
                            <td>Komael</td>
                            <td><span class="badge bg-warning-subtle text-warning">Canceled</span></td>
                            <td>₹200.00</td>
                        </tr>
                        <tr>
                            <td><input type="checkbox" class="form-check-input" /></td>
                            <td>Jens</td>
                            <td>#25424</td>
                            <td>Nov 6th,2023</td>
                            <td>Nikhil</td>
                            <td><span class="badge bg-success-subtle text-success">Delivered</span></td>
                            <td>₹200.00</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item active"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                    <li class="page-item"><span class="page-link">...</span></li>
                    <li class="page-item"><a class="page-link" href="#">10</a></li>
                    <li class="page-item"><a class="page-link" href="#">NEXT</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
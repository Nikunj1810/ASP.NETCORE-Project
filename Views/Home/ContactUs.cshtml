
@{
    ViewData["Title"] = "ContatUs";
}

<div class="container py-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Contact Us</li>
        </ol>
    </nav>

    <!-- Page Title -->
    <h1 class="fw-bold mb-3">Contact Us</h1>

    <div class="row g-5">
        <!-- Left Side - Contact Info -->
        <div class="col-md-6">
            <p class="mb-4">Have a question, comment, or concern? We'd love to hear from you. Fill out the form and we'll get back to you as soon as possible.</p>

            <div class="d-flex mb-4">
                <i class="fas fa-map-marker-alt text-primary me-3 mt-1"></i>
                <div>
                    <h6 class="fw-semibold">Address</h6>
                    <p class="text-muted">123 Shopping Street, E-commerce City, EC 12345</p>
                </div>
            </div>

            <div class="d-flex mb-4">
                <i class="fas fa-phone text-primary me-3 mt-1"></i>
                <div>
                    <h6 class="fw-semibold">Phone</h6>
                    <p class="text-muted">(123) 456-7890</p>
                </div>
            </div>

            <div class="d-flex">
                <i class="fas fa-envelope text-primary me-3 mt-1"></i>
                <div>
                    <h6 class="fw-semibold">Email</h6>
                    <p class="text-muted">support@quickcart.com</p>
                </div>
            </div>
        </div>

        <!-- Right Side - Contact Form -->
        <div class="col-md-6">
            <div class="p-4 border rounded bg-white">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control border border-dark rounded-0" placeholder="Your name" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control border border-dark rounded-0" placeholder="Your email" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Subject</label>
                        <input type="text" class="form-control border border-dark rounded-0" placeholder="Subject of your message" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Message</label>
                        <textarea class="form-control border border-dark rounded-0" rows="5" placeholder="Your message" required></textarea>
                    </div>

                    <button type="submit" class="btn border-0 bg-transparent d-block mx-auto">Send Message</button>
                </form>
            </div>
        </div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


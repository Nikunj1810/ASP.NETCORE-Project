@using System.Linq
@{
    ViewData["Title"] = "Home Page";
}

<section class="hero-section">
    <div class="container" style="max-width: 1500px;">
        <div class="grid">
            <div class="image-container" >
                <img src="/images/hero.png" alt="Fashion models" />
            </div>
            <div>
                <div class="stats">
                    <div>
                        <p class="stat-number">200+</p>
                        <p class="stat-text">International Brands</p>
                    </div>
                    <div>
                        <p class="stat-number">2,000+</p>
                        <p class="stat-text">High-Quality Products</p>
                    </div>
                    <div>
                        <p class="stat-number">30,000+</p>
                        <p class="stat-text">High-Quality Products</p>
                    </div>
                </div>
                <h1 class="headline">
                    You can have anything you want in life if you dress for it.
                </h1>
                <p class="description">
                    Browse through our diverse range of meticulously crafted garments, designed to bring out your individuality and cater to your sense of style.
                </p>
                <div class="btn-container">
                    <a href="/shop" class="shop-btn">Shop Now</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Brand Logos -->
<section class="py-1 bg-black">
    <div class="container">
        <div class="row text-center align-items-center justify-content-between">
            <div class="col">
                <img src="~/images/prada.png" alt="Prada" class="brand-logo">
            </div>
            <div class="col">
                <img src="~/images/mufti.png" alt="Mufti" class="brand-logo">
            </div>
            <div class="col">
                <img src="~/images/vanheusen.png" alt="Van Heusen" class="brand-logo">
            </div>
            <div class="col">
                <img src="~/images/calvin.png" alt="Calvin Klein" class="brand-logo">
            </div>
            <div class="col">
                <img src="~/images/gucci.png" alt="Gucci" class="brand-logo">
            </div>
        </div>
    </div>
</section>
<!-- New Arrivals -->
<section class="py-5" style="background-color: #f8f9fa; border-radius: 10px; margin: 20px; border: 1px solid #e0e0e0; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
    <div class="container">
        <h1 class="text-center fw-bold display-5 mb-5 text-uppercase">New Arrivals</h1>
        <div class="row g-4">
            @if (ViewBag.NewArrivals != null && ViewBag.NewArrivals.Count > 0)
            {
                @foreach (var product in ViewBag.NewArrivals)
                {
                    <div class="col-12 col-sm-6 col-md-3">
                        <div class="card border-0 shadow-sm">
                            @if (product.ImageUrls != null && product.ImageUrls.Count > 0)
                            {
                                <img src="@product.ImageUrls[0]" class="card-img-top img-fluid" alt="@product.Name">
                            }
                            else
                            {
                                <img src="~/images/shirt.jpg" class="card-img-top img-fluid" alt="@product.Name">
                            }
                            <div class="card-body text-center">
                                <h5 class="card-title fw-bold">@product.Name</h5>
                                <div class="d-flex justify-content-center align-items-center gap-2">
                                    <p class="card-text mb-0">₹ @product.Price</p>
                                    @if (product.DiscountPercentage > 0)
                                    {
                                        <p class="card-text mb-0 text-decoration-line-through text-muted">₹ @product.OriginalPrice</p>
                                        <span class="discount-badge">@product.DiscountPercentage% OFF</span>
                                    }
                                </div>
                            </div>
                            <div class="card-footer bg-white border-0 text-center">
                                <a href="/Shop/ProductDetail?id=@product.Id" class="btn btn-sm btn-outline-dark">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p>No new arrivals found at the moment.</p>
                </div>
            }
        </div>
        <div class="mt-4 text-center">
            <a href="/Shop/Shop" class="btn btn-outline-dark">View All →</a>
        </div>
    </div>
</section>

<!-- Top Selling -->
<section class="py-5" style="background-color: #f8f9fa; border-radius: 10px; margin: 20px; border: 1px solid #e0e0e0; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
    <div class="container">
        <h1 class="text-center fw-bold display-5 mb-5 text-uppercase">Top Selling</h1>
        <div class="row g-4">
            @if (ViewBag.TopSelling != null && ViewBag.TopSelling.Count > 0)
            {
                @foreach (var product in ViewBag.TopSelling)
                {
                    <div class="col-12 col-sm-6 col-md-3">
                        <div class="card border-0 shadow-sm h-100 rounded-4">
                            <div class="position-relative">
                                <a asp-controller="Shop" asp-action="ProductDetail" asp-route-id="@product.Id">
                                    @if (product.ImageUrls != null && product.ImageUrls.Count > 0)
                                    {
                                        <img src="@product.ImageUrls[0]" class="card-img-top rounded-top-4" style="width: 100%; height: 300px; object-fit: contain;" alt="@product.Name">
                                    }
                                    else
                                    {
                                        <img src="~/images/shirt.jpg" class="card-img-top rounded-top-4" style="width: 100%; height: 300px; object-fit: contain;" alt="@product.Name">
                                    }
                                </a>
                            </div>
                            <div class="card-body">
                                <a asp-controller="Shop" asp-action="ProductDetail" asp-route-id="@product.Id" class="text-decoration-none">
                                    <h5 class="card-title fw-semibold text-dark">@product.Name</h5>
                                </a>
                                <p class="text-muted small mb-1">Brand: <strong>@product.Brand</strong></p>
                                <p class="text-muted small mb-2">Category: <strong>@product.Category</strong></p>

                                <div class="d-flex align-items-center gap-2 mb-3">
                                    <span class="fw-bold fs-5 text-dark">₹@product.Price</span>
                                    @if (product.DiscountPercentage > 0)
                                    {
                                        <span class="text-muted text-decoration-line-through small">₹@product.OriginalPrice</span>
                                        <span class="discount-badge">@product.DiscountPercentage% OFF</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p>No top selling products found at the moment.</p>
                </div>
            }
        </div>
        <div class="mt-4 text-center">
            <a href="/Shop/Shop" class="btn btn-outline-dark">View All →</a>
        </div>
    </div>
</section>


            </div>
            <div class="col">
                <img src="~/images/calvin.png" alt="Calvin Klein" class="brand-logo">
            </div>
            <div class="col">
                <img src="~/images/gucci.png" alt="Gucci" class="brand-logo">
            </div>
        </div>
    </div>
</section>
<!-- New Arrivals -->
<section class="py-5" style="background-color: #f8f9fa; border-radius: 10px; margin: 20px; border: 1px solid #e0e0e0; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
    <div class="container">
        <h1 class="text-center fw-bold display-5 mb-5 text-uppercase">New Arrivals</h1>
        <div class="position-relative">
            <div class="row flex-nowrap overflow-auto pb-3" style="-webkit-overflow-scrolling: touch; scrollbar-width: none; -ms-overflow-style: none;">
                <style>
                    .overflow-auto::-webkit-scrollbar { display: none; }
                    .card-img-top {
                        width: 100%;
                        height: 300px; /* Set a uniform height for all images */
                        object-fit: cover; /* Ensures the image covers the area without distortion */
                        transition: transform 0.3s ease, opacity 0.3s ease; /* Add transition for hover effect */
                    }
                    .card-img-top:hover {
                        transform: scale(1.05); /* Slightly enlarge the image on hover */
                        opacity: 0.9; /* Slightly reduce opacity on hover */
                    }
                </style>
            @if (ViewBag.NewArrivals != null && ViewBag.NewArrivals.Count > 0)
            {
                @foreach (var product in ViewBag.NewArrivals)
                {
                    <div class="col-12 col-sm-6 col-md-3">
                        <div class="card border-0 shadow-sm h-100 rounded-4">
                            <div class="position-relative">
                                <a asp-controller="Shop" asp-action="ProductDetail" asp-route-id="@product.Id">
                                    @if (product.ImageUrls != null && product.ImageUrls.Count > 0)
                                    {
                                        <img src="@product.ImageUrls[0]" class="card-img-top rounded-top-4" style="width: 100%; height: 300px; object-fit: contain;" alt="@product.Name">
                                    }
                                    else
                                    {
                                        <img src="~/images/shirt.jpg" class="card-img-top rounded-top-4" style="width: 100%; height: 300px; object-fit: contain;" alt="@product.Name">
                                    }
                                </a>
                            </div>
                            <div class="card-body">
                                <a asp-controller="Shop" asp-action="ProductDetail" asp-route-id="@product.Id" class="text-decoration-none">
                                    <h5 class="card-title fw-semibold text-dark">@product.Name</h5>
                                </a>
                                <span class="fw-bold fs-5 text-dark">₹@product.Price</span>
                                @if (product.DiscountPercentage > 0)
                                {
                                    <span class="text-muted text-decoration-line-through small">₹@product.OriginalPrice</span>
                                    <span class="discount-badge">@product.DiscountPercentage% OFF</span>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p>No new arrivals found at the moment.</p>
                </div>
            }
        </div>
        <div class="mt-4 text-center">
            <a href="/Shop/Shop" class="btn btn-outline-dark">View All →</a>
        </div>
    </div>
</section>


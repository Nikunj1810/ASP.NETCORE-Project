@model List<ASP.netcore_Project.Models.ProductModel>

@{
    ViewData["Title"] = "Shop";
}

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container mt-4">
    <div class="row">
        <!-- Filters Section -->
        <aside class="col-md-3">
            <div class="card p-3">
                <h4 class="fw-bold">Filters</h4>

                <!-- Price Range Filter -->
                <div class="mb-3">
                    <h6 class="fw-semibold">Price Range</h6>
                    <input type="range" class="form-range" min="0" max="100" value="50">
                    <p class="text-muted">$0 - $100</p>
                </div>

                <!-- Categories Filter -->
                <div>
                    <h6 class="fw-semibold">Categories</h6>
                    <ul class="list-unstyled">
                        <li><input type="checkbox"> T-shirts</li>
                        <li><input type="checkbox"> Shirts</li>
                        <li><input type="checkbox"> Jeans</li>
                        <li><input type="checkbox"> Dresses</li>
                        <li><input type="checkbox"> Sweaters</li>
                        <li><input type="checkbox"> Jackets</li>
                        <li><input type="checkbox"> Shoes</li>
                        <li><input type="checkbox"> Accessories</li>
                    </ul>
                </div>
            </div>
        </aside>

        <!-- Products Section -->
        <main class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="fw-bold">All Products</h2>
                <select class="form-select w-auto">
                    <option>Sort by Name</option>
                    <option>Sort by Price</option>
                </select>
            </div>

            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="position-relative">
                                <img src="~/images/shirt.jpg" class="card-img-top img-fluid" style="height: 250px; object-fit: cover;" alt="Shirt">
                            </div>
                            <div class="card-body text-center">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text fw-bold text-primary">₹ @product.Price</p>
                                 <a asp-controller="Shop" asp-action="ProductDetail">view detail</a>

                            </div>
                        </div>
                    </div>
                }
            </div>
        </main>
    </div>
</div>

<!-- Bootstrap JS (optional, for interactive components) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@{
    ViewBag.Title = "Order Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="text-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-check-circle-fill text-success mb-4" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 11.001 8a8 8 0 0115.998 0zM6.97 10.03a.75.75 0 001.08.022l3.992-3.992a.75.75 0 10-1.06-1.06L7.5 8.439 5.53 6.47a.75.75 0 10-1.06 1.06l2.5 2.5z"/>
        </svg>

        <h2>Order Confirmation</h2>
        <p class="lead">Your order has been placed successfully! We'll send you an email with the details shortly.</p>
        
        @if (!string.IsNullOrEmpty(ViewBag.OrderId))
        {
            <div class="alert alert-info mt-3">
                <strong>Order ID:</strong> @ViewBag.OrderId
            </div>
        }
    </div>

    <div class="card my-4">
        <div class="card-body">
            <h5 class="card-title">What's Next?</h5>
            <ul>
                <li>You will receive an order confirmation email.</li>
                <li>Your order will be processed for shipping.</li>
                <li>Tracking details will be shared once shipped.</li>
                <li>You can view order status in your profile.</li>
            </ul>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary me-2">Continue Shopping</a>
        <a asp-action="OrderHistory" asp-controller="Profile" class="btn btn-outline-secondary">View My Orders</a>
    </div>
</div>

<script>
    // Removed redirect logic
</script>

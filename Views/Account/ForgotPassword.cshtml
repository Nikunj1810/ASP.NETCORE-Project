@{
    ViewData["Title"] = "Forgot Password";
}

<section class="py-5" style="background-color: #f8f9fa;">
    <div class="container d-flex justify-content-center">
        <div class="card shadow-sm rounded-4 p-4" style="max-width: 420px; width: 100%;">
            
            <!-- Breadcrumb -->
            <div class="mb-3 text-muted small">
                <a href="/" class="text-decoration-none text-secondary">Home</a>
                <span class="mx-1">/</span>
                <a href="/Account/Login" class="text-decoration-none text-secondary">Login</a>
                <span class="mx-1">/</span>
                <span class="fw-bold text-dark">FORGOT PASSWORD</span>
            </div>

            <!-- Header -->
            <h2 class="fw-bold text-center mb-1">Forgot Password?</h2>
            <p class="text-center text-muted mb-4">Enter your email to receive a password reset link</p>

            <!-- Success Message -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            <!-- Error Message -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            <!-- Form -->
            <form asp-action="ForgotPassword" method="post" class="needs-validation" novalidate>
                <div class="mb-4">
                    <label for="email" class="form-label fw-bold"><i class="fas fa-envelope"></i> Email Address</label>
                    <input type="email" name="email" class="form-control rounded-3" placeholder="Enter your email" required />
                    <div class="invalid-feedback">Please enter a valid email address.</div>
                </div>
                <button type="submit" class="btn btn-dark w-100 py-2 rounded-3 mb-3">
                    <i class="fas fa-paper-plane me-2"></i> Send Reset Link
                </button>
                <div class="text-center mt-3">
                    <a asp-controller="Account" asp-action="Login" class="text-decoration-none text-dark">
                        <i class="fas fa-arrow-left me-1"></i> Back to Login
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}
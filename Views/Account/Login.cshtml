@model ASP.netcore_Project.Models.AccountModel
@{
    ViewData["Title"] = "Login";
}

<section>
    <div class="cont">
        <div class="breadcrumb">
            <a href="/">Home</a>
            <span>/</span>
            <span>LOGIN</span>
        </div>

        <div class="login-card">
            <h1>Welcome Back!</h1>
            <p>Log in to your account to continue</p>

            @if (TempData["msg"] != null)
            {
                <div class="alert alert-danger">@TempData["msg"]</div>
            }
            <form asp-controller="Account" asp-action="Login" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="login-btn">EMAIL LOGIN</button>
            </form>

            <div class="signup-section d-flex justify-content-center mt-3">
                <a asp-controller="Account" asp-action="Register" class="signup-btn me-3">Sign Up</a>
                <a asp-controller="Account" asp-action="AdminLogin" class="admin-btn">Admin Login</a>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

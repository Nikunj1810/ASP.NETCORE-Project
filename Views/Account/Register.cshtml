@{
    ViewData["Title"] = "Register";
}

<section class="container py-5 d-flex justify-content-center align-items-center">
    <div class="w-100" style="max-width: 600px;">
        <nav class="mb-4">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-secondary">Home</a>
            <span class="text-secondary">/</span>
            <span class="fw-bold">Register</span>
        </nav>

        <div class="border border-secondary rounded p-5 shadow-sm bg-white">
            <h1 class="h3 fw-bold mb-3">Register</h1>
            <p class="mb-4">Sign up with</p>

            <form asp-action="Register" asp-controller="Account" method="post" class="needs-validation" novalidate>
                <!-- Personal Information -->
                <div class="mb-4">
                    <input type="text" name="FirstName" class="form-control mb-3 p-3" placeholder="First Name" required />
                    <div class="invalid-feedback">First name is required.</div>

                    <input type="text" name="LastName" class="form-control mb-3 p-3" placeholder="Last Name" required />
                    <div class="invalid-feedback">Last name is required.</div>

                    <input type="tel" name="Phone" class="form-control mb-3 p-3" placeholder="Phone No." pattern="[0-9]{10}" required />
                    <div class="invalid-feedback">Please enter a valid 10-digit phone number.</div>

                    <input type="text" name="Address" class="form-control mb-3 p-3" placeholder="Address" required />
                    <div class="invalid-feedback">Address is required.</div>
                </div>

                <!-- Login Details -->
                <h5 class="mb-3">Login Details</h5>
                <div class="mb-4">
                    <input type="email" name="Email" class="form-control mb-3 p-3" placeholder="Email" required />
                    <div class="invalid-feedback">Please enter a valid email address.</div>

                    <input type="password" name="Password" class="form-control p-3" placeholder="Password"
                           pattern="@Html.Raw(@"^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&]).{8,}$")" required />
                    <div class="invalid-feedback">
                        Password must be at least 8 characters long, include uppercase, lowercase, a number, and a special character.
                    </div>

                    <small class="text-muted mt-2 d-block">
                        Minimum 8 characters with at least one uppercase, one lowercase, one special character, and a number.
                    </small>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-3">REGISTER</button>
            </form>

            <!-- Login Redirect -->
            <div class="mt-4 text-center">
                <p class="text-muted">
                    Already have an account?
                    <a asp-controller="Account" asp-action="Login" class="text-primary fw-medium">Login</a>
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Bootstrap Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>
}

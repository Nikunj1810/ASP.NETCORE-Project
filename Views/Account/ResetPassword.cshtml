@{
    ViewData["Title"] = "Reset Password";
}

<section class="py-5" style="background-color: #f8f9fa;">
    <div class="container d-flex justify-content-center">
        <div class="card shadow-sm rounded-4 p-4" style="max-width: 420px; width: 100%;">
            
            <!-- Breadcrumb -->
            <div class="mb-3 text-muted small">
                <a href="/" class="text-decoration-none text-secondary">Home</a>
                <span class="mx-1">/</span>
                <a href="/Account/Login" class="text-decoration-none text-secondary">Login</a>

                <span class="mx-1">/</span>
                <span class="text-dark">RESET PASSWORD</span>
            </div>

            <!-- Header -->
            <h2 class="text-center mb-1">Reset Password</h2>
            <p class="text-center text-muted mb-4">Create a new password for your account</p>

            <!-- Success Message -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            <!-- Error Message -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="ResetPassword" method="post">
                <input type="hidden" name="token" value='@ViewContext.HttpContext.Request.Query["token"]' />
                
                <div class="mb-3">
                    <label for="newPassword" class="form-label">New Password</label>
                    <input type="password" name="newPassword" id="newPassword" class="form-control" 
                           placeholder="Enter new password" required />
                    <div class="invalid-feedback">Please enter a new password</div>
                </div>
                
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                    <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" 
                           placeholder="Confirm new password" required />
                    <div class="invalid-feedback">Please confirm your password</div>
                </div>
                
                <button type="submit" class="btn btn-dark w-100 d-flex justify-content-center align-items-center gap-2 mt-4">
                    RESET PASSWORD <span class="fs-5">â†’</span>
                </button>
            </form>

            <!-- Extra links -->
            <div class="mt-4 text-center">
                <p class="text-muted mb-2">Remember your password?</p>
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary w-100">Back to Login</a>
            </div>
        </div>
    </div>
</section>
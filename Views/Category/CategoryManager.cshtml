@model ASP.netcore_Project.Models.CategoryModel

@{
    ViewData["Title"] = "CategoryManager";
    Layout = "~/Views/Shared/Adminlayout.cshtml";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        margin-top: 20px;
    }

    .breadcrumb {
        font-size: 14px;
        color: #6c757d;
    }

    .card {
        padding: 20px;
    }

    .upload-box {
        border: 2px dashed #ddd;
        border-radius: 10px;
        text-align: center;
        padding: 40px;
        color: #6c757d;
    }

    .form-control, .form-select {
        border-radius: 5px;
    }

    .btn-upload {
        width: 100%;
        margin-top: 10px;
    }

    .card-header {
        background-color: #007bff;
        color: white;
        font-size: 18px;
        padding: 15px;
    }

    .form-control {
        border-radius: 20px;
        transition: border-color 0.3s;
    }

        .form-control:hover {
            border-color: #007bff;
        }

    .btn-primary {
        border-radius: 20px;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .list-group-item:nth-child(odd) {
        background-color: #f1f1f1;
    }

    .list-group-item:nth-child(even) {
        background-color: #e9ecef;
    }
</style>

<div class="container">
    <!-- Breadcrumb -->
    <div class="breadcrumb">
        <a href="#" class="text-decoration-none text-secondary">Home</a> &gt;
        <a href="#" class="text-decoration-none text-secondary">All Products</a> &gt;
        <span class="fw-bold">Add New Product</span>
    </div>

    <!-- Page Title -->
    <h1 class="fw-bold">Add Product</h1>

    <!-- Tabs -->
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" asp-controller="Admin" asp-action="AddProduct">Product Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Admin" asp-action="CategoryManager">Manage Categories</a>
        </li>
    </ul>

    <!-- Category Management Card -->
    <div class="card shadow mt-3">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="mb-0">Category Management</h3>
                </div>
                <div class="col-auto">
                    <form asp-controller="Category" asp-action="CategoryManager" method="post">
                        <div class="d-flex">
                            <input type="text" asp-for="Category" class="form-control" placeholder="New category" style="width: 200px; margin-right: 10px;">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="bi bi-plus-lg"></i> Add
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            <h5 class="mb-4">All Categories</h5>
            <div class="list-group">
                <!-- Category Items -->
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    Jeans
                    <div>
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <i class="bi bi-square"></i>
                    </div>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    T-Shirt
                    <div>
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <i class="bi bi-square"></i>
                    </div>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    Shoes
                    <div>
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <i class="bi bi-square"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-end mt-3">
        <button class="btn btn-light me-2">Cancel</button>
        <button class="btn btn-primary">Save Product</button>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
